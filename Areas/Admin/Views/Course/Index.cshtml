@model Academy.Models.CourseListModel

@{
    ViewBag.Title = "Courses List";
}

<h2>Courses List</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@using (Html.BeginForm("Index", "Course", FormMethod.Get, new { @class = "row align-items-center " }))
{
    <div class="col">
        <div class="form-group">
            @Html.LabelFor(model => model.Query)
            @Html.TextBoxFor(model => model.Query, new { @class = "form-control" })
        </div>
    </div>
    <div class="col">
        <div class="form-group">
            @Html.LabelFor(m => m.trainerID)
            @Html.DropDownListFor(c => c.trainerID, Model.Trainers, "--Select Trainer--", new { @class = "form-control" })
        </div>
    </div>
    <div class="col">
        <div class="form-group">
            @Html.LabelFor(m => m.CategoryID)
            @Html.DropDownListFor(c => c.CategoryID, Model.Categories, "--Select Category--", new { @class = "form-control" })
        </div>


    </div>
    <div class="col">
            <div class="form-group">
                <label></label>
                <input type="submit" value="Search" class="btn btn-primary form-control" />
            </div>
    </div>






        }
        <br />
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Courses.First().ImageID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Courses.First().Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Courses.First().Creation_date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Courses.First().TrainerName)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Courses.First().CategoryName)
                </th>
                <th>
                    Trainees

                </th>

            </tr>

            @foreach (var item in Model.Courses)
            {
                <tr>
                    <td>
                        <img src="~/Uploads/Courses/@item.ImageID" style="width:45px;" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Creation_date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TrainerName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CategoryName)
                    </td>
                    <td>
                        @Html.ActionLink("Trainee", "Index", "Trainee", new { CourseId = item.ID }, new
                        { @class = "btn btn-primary" })
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                        @Html.ActionLink("Contents", "Index","CourseUnits", new { CourseID = item.ID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                    </td>
                </tr>
            }

        </table>


@model Academy.Areas.Admin.Models.LoginModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Areas/Admin/Views/Shared/_OfflineLayout.cshtml";

}

<div class="card shadow-lg border-0 rounded-lg mt-5">
    <div class="card-header"><h3 class="text-center font-weight-light my-4">Login</h3></div>
    <div class="card-body">
        @using (Html.BeginForm("Login", "Account", FormMethod.Post))
        {
            @Html.ValidationSummary()
            <div class="form-floating mb-3">
                @Html.TextBoxFor(m => m.Email, new
                              {
                                  @class = "form-control",
                                  placeholder = "Enter Email Address..."
                              })
            </div>
            <div class="form-floating mb-3">
                @Html.PasswordFor(m => m.Passsword, new { @class = "form-control", placeholder = "Password" })

            </div>
            <div class="form-check mb-3">
                <input class="form-check-input" id="inputRememberPassword" type="checkbox" value="" />
                <label class="form-check-label" for="inputRememberPassword">Remember Password</label>
            </div>
            <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                <a class="small" href="password.html">Forgot Password?</a>
                <button class="btn btn-primary"type="submit" >Login</button>
            </div>
        }
    </div>
    <div class="card-footer text-center py-3">
        <div class="small"><a href="register.html">Need an account? Sign up!</a></div>
    </div>
    @if (Model != null && Model.Message != null)
    {
        <div class="alert alert-warning">
            @Model.Message
        </div>
    }
</div>

